<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbutton"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/tvMin"
            style="@style/TextView"
            android:text="@string/_0" />

        <TextView
            android:id="@+id/tvColon"
            style="@style/TextView"
            android:text="@string/_colon" />

        <TextView
            android:id="@+id/tvSec"
            style="@style/TextView"
            android:text="@string/_00"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginBottom="20dp" >

        <Button
            android:id="@+id/btnStart"
            style="@style/ButtonTextBig"
            android:layout_gravity="top|center_vertical"
            android:background="@drawable/greenbutton"
            android:text="@string/start" />

        <Button
            android:id="@+id/btnIncrease"
            style="@style/ButtonTextSmall"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/yellowbutton"
            android:text="@string/increase_time" />

        <Button
            android:id="@+id/btnDecrease"
            style="@style/ButtonTextSmall"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/redbutton"
            android:text="@string/decrease_time" />

        <Button
            android:id="@+id/btnReset"
            style="@style/ButtonTextBig"
            android:layout_gravity="bottom|center_vertical"
            android:background="@drawable/purplebutton"
            android:text="@string/reset" />
    </FrameLayout>

</RelativeLayout>